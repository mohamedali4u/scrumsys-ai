{
  "name": "ai-agent-widget",
  "private": false,
  "version": "1.0.0",
  "description": "Embeddable AI financial assistant widget",
  "type": "module",
  "main": "./dist/widget.umd.cjs",
  "module": "./dist/widget.js",
  "types": "./dist/widget.d.ts",
  "exports": {
    ".": {
      "import": "./dist/widget.js",
      "require": "./dist/widget.umd.cjs"
    }
  },
  "files": [
    "dist",
    "public/embed.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:widget": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "deploy:netlify": "npm run build:widget && netlify deploy --prod --dir dist",
    "test:integration": "npm run build:widget && npm run serve"
  },
  "keywords": [
    "ai",
    "chatbot",
    "widget",
    "financial",
    "assistant",
    "embeddable"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.4.7",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}